<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DialogAppBarOverlay" parent="AppTheme.AppBarOverlay">
        <item name="android:background">@color/colorDialogActionBarBackground</item>
        <item name="background">@color/colorDialogActionBarBackground</item>
    </style>



    <style name="inputEditText">
        <item name="android:gravity">bottom|right</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
        <item name="android:textSize">@dimen/inputTextSize</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="panelRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="panelRowLand" parent="panelRow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="panelElem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="panelElem.button" parent="panelElem">
        <item name="android:onClick">onPadButtonClick</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="panelElem.button.base" parent="panelElem.button">
        <item name="android:background">@drawable/background_digit_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:tag">digit</item>
    </style>
    <style name="panelElem.button.equals" parent="panelElem.button">
        <item name="android:background">@drawable/background_equals_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="panelElem.button.system" parent="panelElem.button">
        <item name="android:background">@color/colorButtonSymbol</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="panelElem.button.delete" parent="panelElem.button.base">
        <item name="android:src">@drawable/ic_input_delete</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:background">@drawable/background_delete_button</item>
        <item name="android:longClickable">true</item>
        <item name="android:contentDescription">Delete</item>
        <item name="android:onClick">onDelButtonClick</item>
    </style>

    <style name="item_history_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="guide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="guide_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="guide_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="guide_text_table">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="guide_text_math" parent="guide_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">#777777</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="about_logo_parent">
        <item name="android:orientation">vertical</item>
    </style>
</resources>
